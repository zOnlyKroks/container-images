{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore:",
  "semanticCommits": "enabled",
  "schedule": [
    "before 6am every weekday"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "description": "Dockerfile base images",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "images/**/Dockerfile"
      ],
      "enabled": true,
      "separateMinorPatch": false,
      "groupName": "Docker base images"
    },
    {
      "description": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "GitHub Actions"
    },
    {
      "description": "Pin GitHub Actions digests",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update MinIO RELEASE in Dockerfile",
      "managerFilePatterns": [
        "/^images/minio/Dockerfile$/"
      ],
      "matchStrings": [
        "ARG RELEASE=(?<currentValue>RELEASE\\.[0-9T\\-Z]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "minio/minio",
      "versioningTemplate": "loose"
    }
  ]
}
